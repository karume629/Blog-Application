
<%= link_to "New Article", new_article_path, class: "w-full bg-blue-800 text-white font-bold text-sm uppercase rounded hover:bg-blue-700 flex items-center justify-center px-2 py-3 mt-4" %>

<article class="flex flex-col shadow my-4">
    <!-- Article Image -->

    <ul>
        <% @articles.each do |article| %>
            <a href="#" class="hover:opacity-75">
                <img src="https://source.unsplash.com/collection/1346951/1000x500?sig=1">
            </a>
            <div class="bg-white flex flex-col justify-start p-6">
                <%= link_to article.title, article, class: "text-blue-700 text-sm font-bold uppercase pb-4" %>
                <p href="#" class="text-sm pb-3">
                </p>
                <p class="pb-6">
                  truncate(<%= article.body %>, length: 250, separator: ' ')
                </p>
            </div>
            <li>
            </li>
        <% end %>
    </ul>
</article>

<!-- Pagination -->
<div class="flex items-center py-8">
    <a href="#" class="h-10 w-10 bg-blue-800 hover:bg-blue-600 font-semibold text-white text-sm flex items-center justify-center">1</a>
    <a href="#" class="h-10 w-10 font-semibold text-gray-800 hover:bg-blue-600 hover:text-white text-sm flex items-center justify-center">2</a>
    <a href="#" class="h-10 w-10 font-semibold text-gray-800 hover:text-gray-900 text-sm flex items-center justify-center ml-3">Next <i class="fas fa-arrow-right ml-2"></i></a>
</div>